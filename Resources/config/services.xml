<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="inviqa_launchdarkly.feature_requester.class">LaunchDarkly\GuzzleFeatureRequester</parameter>
    </parameters>

    <services>

        <service id="inviqa_launchdarkly.client" class="LaunchDarkly\LDClient">
            <argument>%inviqa_launchdarkly.feature_requester.api_key%</argument>
            <argument type="collection">
                <argument key="feature_requester_class">%inviqa_launchdarkly.feature_requester.class%</argument>
            </argument>
        </service>

    </services>

</container>
